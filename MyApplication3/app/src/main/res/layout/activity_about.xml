<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".AboutActivity"

    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/copyrightIcon"
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:layout_marginTop="45dp"
        android:background="@null"
        app:civ_border_color="@color/purple_1000"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/purple_1000"
        app:civ_shadow_radius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView"
        app:srcCompat="@mipmap/copyright_icon" />

    <TextView
        android:id="@+id/ramiGhawi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Rami Ghawi - 2021"

        android:textColor="@color/green"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copyrightIcon" />

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Healthy foods are those that provide you with the nutrients you need to sustain your body’s well-being and retain energy. Water, carbohydrates, fat, protein, vitamins, and minerals are the key nutrients that make up a healthy, balanced diet.
This information tells us we need to focus on eating fresh foods that provide us with the nutrients our bodies need.

Unfortunately, the food industry doesn’t make as much of a profit on fresh foods; processed foods are where the money's at. Even big food companies have lobbied aggressively against public health plans - such as a campaign ordering the removal of junk food from schools.

These junk food items, processed from crops such as corn, wheat, and soybeans, are high in calories (fillers) and lack the nutritional value your body needs. However, because they are derived from crops, it can be difficult to know if they are healthy or not, and misleading claims on labels only make things worse."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoTextView" />

    <TextView
        android:id="@+id/logoTextView"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:shadowColor="@color/aqua"
        android:text="Healthy Food"
        android:textColor="@color/purple_1000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/healthy_restaurants_icon" />

    <TextView
        android:id="@+id/contactUsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/barchella_drumal"
        android:text="Contact Us:"
        android:textColor="@color/purple_1000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/emailImageView"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/purple_1000"
        app:civ_shadow_radius="5dp"
        app:layout_constraintEnd_toStartOf="@+id/emailTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whatsappIcon"
        app:srcCompat="@mipmap/email_icon_foreground" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/instaIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="84dp"
        android:background="@null"
        app:civ_border_color="@color/white"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/white"
        app:civ_shadow_radius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView"
        app:srcCompat="@mipmap/insta_icon" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/whatsappIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="52dp"
        android:background="@null"
        app:civ_border_color="@color/white"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/white"
        app:civ_shadow_radius="0.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutTextView"
        app:srcCompat="@mipmap/whatsapp_icon" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/facebookIcon"
        android:layout_width="411dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:civ_border_color="@color/white"
        app:civ_border_width="0dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/white"
        app:civ_shadow_radius="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactUsTextView"
        app:srcCompat="@mipmap/facebook_icon" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:fontFamily="@font/barchella_drumal"
        android:text="ramighawi10@gmail.com"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/emailImageView"
        app:layout_constraintTop_toBottomOf="@+id/instaIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>