<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/app_background_foreground"
    tools:context=".PrizeDeliveryActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/logoImageView"
        android:layout_width="80dp"
        android:layout_height="90dp"

        android:layout_marginStart="165dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="165dp"
        app:civ_border_width="0.5dp"
        app:civ_shadow_radius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/healthy_icon" />

    <TextView
        android:id="@+id/newDeliveryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:shadowColor="@color/aqua"
        android:text="New Delivery"
        android:textColor="@color/purple_1000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/emailTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="215dp"
        android:layout_height="52dp"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="28dp"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColorHint="@color/green"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/sendDeliveryImageView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addressEditText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phoneNumberTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/prizeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newDeliveryTextView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/greatPrizeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Great Prize!!"
        android:textColor="@color/purple_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prizeImageView" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/sendDeliveryImageView"
        android:layout_width="100dp"
        android:layout_height="112dp"
        android:layout_marginBottom="91dp"
        android:background="@null"
        app:civ_border_color="@color/green"
        app:civ_border_width="10dp"
        app:civ_shadow="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/delivery_icon_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>